<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/cal_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">


        <CheckBox
            android:id="@+id/calendar_check"
            style="@style/ItemStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/calendar_thing"
            style="@style/ItemStyle"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/calendar_check"
            android:layout_toRightOf="@id/calendar_check" />

        <TextView
            android:id="@+id/calendar_rank"
            style="@style/ItemStyle"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/calendar_thing"
            android:layout_toRightOf="@id/calendar_thing" />

        <TextView
            android:id="@+id/calendar_date"
            style="@style/ItemStyle"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/calendar_rank"
            android:layout_toRightOf="@id/calendar_rank" />
    </RelativeLayout>

</RelativeLayout>